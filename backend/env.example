# 应用配置
APP_NAME=LoomAI Backend
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据库配置
DATABASE_URL=sqlite:///./loom_ai.db
# 生产环境可以使用PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost/loom_ai

# Redis配置 (用于Celery任务队列)
REDIS_URL=redis://localhost:6379/0

# 第三方API配置
TUZI_API_KEY=your-tuzi-api-key-here
TUZI_BASE_URL=https://api.tu-zi.com

# 文件存储配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp,webp

# AWS S3配置 (可选，用于生产环境)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=loom-ai-files
AWS_REGION=us-east-1

# 支付配置
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@loom-ai.com

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
