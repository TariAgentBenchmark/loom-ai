APP_NAME=LoomAI
ENVIRONMENT=development
APP_VERSION=0.1.0

# 数据库配置
# 默认使用 SQLite（本地文件），如需 PostgreSQL 将下方改为 postgresql+psycopg://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///./data/loom_ai.db
# Gunicorn 进程数（Dockerfile 中默认 4，可按机器核数调整）
GUNICORN_WORKERS=4

SECRET_KEY=your-secret-key-here
# Apyi API配置 (主要配置)
APIYI_API_KEY=your_apiyi_api_key

# tuzi配置已弃用
# TUZI_API_KEY=your_tuzi_api_key
# TUZI_BASE_URL=https://api.tu-zi.com

# 美图API配置
MEITU_API_KEY=your_meitu_api_key
MEITU_API_SECRET=your_meitu_api_secret

# Dewatermark.ai API配置
DEWATERMARK_API_KEY=your_dewatermark_api_key

# Vectorizer.ai API配置
VECTORIZER_API_KEY=your_vectorizer_api_key
VECTORIZER_API_SECRET=your_vectorizer_api_secret
# 矢量转换Web API配置（mm.kknc.site）
VECTOR_WEBAPI_KEY=your_vector_webapi_key
VECTOR_WEBAPI_BASE_URL=http://mm.kknc.site/webapi/webapi.php
VECTOR_WEBAPI_POLL_TIMEOUT=180
VECTOR_WEBAPI_POLL_INTERVAL=2

# 即梦API配置
JIMENG_API_KEY=your_jimeng_api_key
JIMENG_API_SECRET=your_jimeng_api_secret

# LibLibAI API配置
LIBLIB_API_URL=https://openapi.liblibai.cloud
LIBLIB_TEMPLATE_UUID=4df2efa0f18d46dc9758803e478eb51c
LIBLIB_WORKFLOW_UUID=18d5858e862d474abe93c72b2fb1b8cc
LIBLIB_ACCESS_KEY=youer_liblib_access_key
LIBLIB_SECRET_KEY=your_liblib_secret_key

# GQCH
GQCH_API_KEY=your_gqch_api_key

# RunningHub API Key (required)
RUNNINGHUB_API_KEY=your_runninghub_api_key

# 阿里云OSS配置
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET_NAME=your_bucket_name
OSS_BUCKET_DOMAIN=your_custom_domain.com
OSS_EXPIRATION_TIME=3600
# 数据保留策略
HISTORY_RETENTION_DAYS=5
OSS_STORAGE_RETENTION_DAYS=15

# 任务看门狗（处理超时/卡住任务）
TASK_WATCHDOG_ENABLED=true
TASK_WATCHDOG_INTERVAL_SECONDS=300
TASK_WATCHDOG_PROCESSING_TIMEOUT_SECONDS=1800
TASK_WATCHDOG_QUEUED_TIMEOUT_SECONDS=900
TASK_WATCHDOG_MAX_RETRIES=2
TASK_WATCHDOG_LOCK_SECONDS=240
TASK_WATCHDOG_BATCH_SIZE=50

# 短信服务配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your_sms_access_key
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=LoomAI
SMS_TEMPLATE_CODE=SMS_123456789
SMS_REGION=cn-hangzhou
SMS_MOCK_ENABLED=false
SMS_CODE_VALID_MINUTES=5

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_merchant_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_SANDBOX=true

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_SANDBOX=true

# 基础URL配置
BASE_URL=http://localhost:8000

